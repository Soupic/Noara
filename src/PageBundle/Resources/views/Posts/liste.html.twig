{% extends "PageBundle::layout.html.twig" %}

{% block body %}
    {#<div class="global">#}
        <div id="galerie">
            <div class="slider">
                {% for post in posts %}
                    <div class="slider-content slider-post">
                        <div class="content-post">
                            <p>{{ post.title }}</p>
                            <p>posté le : {{ post.date|date("d/m/Y") }}</p>
                            {#Condition si une image est présente dans l'article#}
                            {% if post.media == true %}
                                <img src="{{ asset(post.media.webPath) }}" alt="image de {{ post.title }}">
                            {% endif %}
                            <p>{{ post.content }}</p>
                            {#<div class="button">Voir</div>#}
                        </div>
                    </div>
                {% endfor %}
            </div>
            <i class="medium right chevron icon orange suiv"></i>
            <i class="medium left chevron icon orange prec"></i>
        </div>
    {#</div>#}
{% endblock %}