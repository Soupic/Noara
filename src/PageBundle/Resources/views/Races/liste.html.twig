{% extends "PageBundle:Default:index.html.twig" %}

{% block block_css %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="{{ asset("bundles/page/css/sliderRace.css") }}">
{% endblock %}
{% block slider_js %}
    {{ parent() }}
    <script src="{{ asset("bundles/page/js/Script/sliderRace.js") }}" type="text/javascript"></script>
    <script src="{{ asset("bundles/page/js/Script/script.js") }}" type="text/javascript"></script>
{% endblock %}

{% block body %}
        {#<div id="galerie">#}
            <div id="carrousel-race">
                {% for race in races %}
                    <div class="content-race-slider">
                        <img src="{{ asset(race.media.webPath) }}" alt="{{ race.name }}">
                        <div class="race-content">
                            <div id="race-name">{{ race.name }}</div>
                            <div id="content">{{ race.content }}</div>
                            <div class="line-button">
                                <div class="line"></div>
                                <div class="button">
                                    <div id="content-button">Voir</div>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
                <i class="fa fa-angle-left fa-3x prev" aria-hidden="true"></i>
                <i class="fa fa-angle-right fa-3x next" aria-hidden="true"></i>
            </div>
        {#</div>#}
{% endblock %}

{% block javascript %}
    {{ parent() }}
    {#<script src="{{ asset("bundles/page/js/Script/sliderPost.js") }}" type="text/javascript"></script>#}
{% endblock %}