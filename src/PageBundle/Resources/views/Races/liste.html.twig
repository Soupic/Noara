{#{% block body %}#}
        {#<div id="galerie">#}
            <div id="carrousel-race">
                {% for race in races %}
                    <div class="content-race-slider">
                        <img src="{{ asset(race.media.webPath) }}" alt="{{ race.name }}">
                        <div class="race-content">
                            <div id="race-name">{{ race.name }}</div>
                            <div id="content-race">{{ race.content }}</div>
                            <div class="line-button-race">
                                <div class="line-race"></div>
                                <div class="button-race">
                                    <div id="content-button-race">Voir</div>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
                <i class="fa fa-angle-left fa-3x prev-race" aria-hidden="true"></i>
                <i class="fa fa-angle-right fa-3x next-race" aria-hidden="true"></i>
            </div>
        {#</div>#}
