{% extends "AdminBundle::layout.html.twig" %}

{% block body %}
    <div class="blockBody">
        <div class="blockTitre">
            <div class="titrePage">Articles</div>
            <div class="btnForm"><a href="{{ path("admin_post") }}">Ajouter un article</a></div>
        </div>
        {% for post in posts %}
            <div class="blockContent">
                <div class="title">{{ post.title }}</div>
                <div class="Content">{{ post.content }}</div>
                {% if post.active == 1 %}
                    <div class="enable">Active</div>
                {% else %}
                    <div class="disabled">Désactivé</div>
                {% endif %}
                <div class="btnEdit"><a href="{{ path("admin_post_edit", {"idPost" : post.id}) }}">Modification</a></div>
                <div class="btnDisabled"><a href="#"></a></div>
                <div class="btnDelete"><a href="{{ path("admin_post_deleted", {"idPost" : post.id}) }}">Suppression</a></div>
            </div>
        {% endfor %}
    </div>
{% endblock %}